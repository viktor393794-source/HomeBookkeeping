<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingTop="8dp"
    android:paddingBottom="8dp"
    android:paddingEnd="8dp"
    android:paddingStart="16dp"
    android:background="?attr/selectableItemBackground">

    <Space
        android:id="@+id/indentationSpace"
        android:layout_width="0dp"
        android:layout_height="1dp" />

    <ImageView
        android:id="@+id/expandIndicator"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_arrow_right"
        app:tint="?android:attr/textColorSecondary"
        android:visibility="invisible"
        tools:visibility="visible"/>

    <FrameLayout
        android:id="@+id/iconContainer"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="4dp"
        android:background="@drawable/icon_background">
        <ImageView
            android:id="@+id/categoryIconImageView"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center"
            tools:src="@drawable/ic_shopping_cart" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/categoryNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Название категории"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/categoryTypeTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Расход"
            android:textSize="12sp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/limitInfoTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Остаток: 5000.00"
            android:textSize="12sp"
            android:visibility="gone"
            tools:visibility="visible"/>
    </LinearLayout>

    <ImageButton
        android:id="@+id/editCategoryButton"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_edit"
        app:tint="?android:attr/textColorSecondary"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="Редактировать категорию" />

    <ImageButton
        android:id="@+id/addSubCategoryButton"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_add"
        app:tint="?attr/colorPrimary"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="Добавить подкатегорию" />

</LinearLayout>