<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:fitsSystemWindows="true" tools:context=".EditAccountActivity">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Редактировать счет"
            android:textSize="22sp"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/accountNameEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:hint="Название счета"
            android:inputType="textCapSentences"/>

        <EditText
            android:id="@+id/balanceEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:hint="Текущий баланс"
            android:inputType="numberDecimal"/>

        <!-- НОВЫЙ CHECKBOX -->
        <CheckBox
            android:id="@+id/includeInTotalCheckBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Учитывать в общем балансе"
            android:checked="true" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="16dp">
            <ImageView
                android:id="@+id/selectedIconImageView"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_default_wallet"
                android:padding="8dp"/>
            <Button
                android:id="@+id/selectIconButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="Выбрать иконку"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="8dp">
            <View
                android:id="@+id/iconColorPreview"
                android:layout_width="48dp"
                android:layout_height="48dp"/>
            <Button
                android:id="@+id/selectIconColorButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="Выбрать цвет иконки"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="8dp">
            <View
                android:id="@+id/backgroundColorPreview"
                android:layout_width="48dp"
                android:layout_height="48dp"/>
            <Button
                android:id="@+id/selectBackgroundColorButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="Выбрать цвет фона"/>
        </LinearLayout>

        <Button
            android:id="@+id/saveAccountButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Сохранить изменения"/>

        <Button
            android:id="@+id/deleteAccountButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Удалить счет"
            android:backgroundTint="@android:color/holo_red_light"/>

    </LinearLayout>
</ScrollView>
